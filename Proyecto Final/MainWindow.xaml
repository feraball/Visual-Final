<Window x:Name="frmLogin" x:Class="MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Catálogo de Delicias - Inicio de sesión" Height="250" Width="400" Icon="Assets/cata-icon.ico" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF09AED3" Offset="0"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnLogin" Content="Iniciar Sesión" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" Width="100" Grid.Row="2" Height="26" FontSize="16"/>
        <Button x:Name="btnSignin" Content="Registrarse" Grid.Column="1" HorizontalAlignment="Center" Margin="0" Grid.Row="2" VerticalAlignment="Center" Width="100" Height="26" FontSize="16"/>
        <TextBox x:Name="txtUser" Grid.Column="1" HorizontalAlignment="Left" Height="26" Margin="10,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" VerticalContentAlignment="Center" FontSize="14"/>
        <Label x:Name="lblUser" Content="Usuario:" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Center" Height="26" Width="65" VerticalContentAlignment="Center" FontWeight="Bold" FontSize="14"/>
        <Label x:Name="lblPass" Content="Contraseña:" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Center" Height="26" Grid.Row="1" Width="89" VerticalContentAlignment="Center" FontWeight="Bold" FontSize="14"/>
        <PasswordBox x:Name="txtPass" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Width="120" Height="26" Grid.Column="1" Grid.Row="1" VerticalContentAlignment="Center" FontSize="14"/>

    </Grid>
</Window>
