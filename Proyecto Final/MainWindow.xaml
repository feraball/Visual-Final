<Window x:Name="frmLogin" x:Class="MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Catálogo de Delicias - Inicio de sesión" Height="360" Width="400" Icon="Assets/cata-icon.ico" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TabControl x:Name="tabContenedor" Margin="0" BorderThickness="0">
            <TabItem x:Name="timTab1" Header="Inicio de Sesión">
                <Grid Background="Black" Margin="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btnLogin" Content="Iniciar Sesión" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Grid.Row="3" Height="36" FontSize="16" Margin="0" Padding="1" FontWeight="Bold"/>
                    <TextBox x:Name="txtUser" HorizontalAlignment="Center" Height="36" Margin="0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" VerticalContentAlignment="Center" FontSize="18" Foreground="#FF969696" Background="#FF4D4D4D" Text="usuario" Padding="0" BorderThickness="0" HorizontalContentAlignment="Center" FontWeight="Bold" BorderBrush="#FFABADB3" Grid.Row="1"/>
                    <PasswordBox x:Name="txtPass" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Top" Width="200" Height="36" Grid.Row="2" VerticalContentAlignment="Center" FontSize="18" Background="#FF4D4D4D" Foreground="#FF969696" BorderThickness="0" HorizontalContentAlignment="Center" Password="visual"/>
                    <Image HorizontalAlignment="Center" Height="100" Margin="0" VerticalAlignment="Center" Width="100" Source="Assets/users.png"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="timTab2" Header="Registro de Clientes">
                <Grid Background="Black">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btnRegistrar" Content="Registrar" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" Width="100" Height="30" Grid.Row="4" FontSize="16" FontWeight="Bold"/>
                    <TextBox x:Name="txtNewUser" HorizontalAlignment="Left" Height="26" Margin="10,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="136" VerticalContentAlignment="Center" Background="#FF4D4D4D" Foreground="White" BorderThickness="0" Padding="0" FontSize="14" FontWeight="Bold" HorizontalContentAlignment="Center" Grid.Column="1" TabIndex="1"/>
                    <TextBox x:Name="txtNewName" HorizontalAlignment="Left" Height="26" Margin="10,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="136" VerticalContentAlignment="Center" Background="#FF4D4D4D" Foreground="White" BorderThickness="0" Padding="0" FontSize="14" FontWeight="Bold" HorizontalContentAlignment="Center" Grid.Column="1" Grid.Row="3" TabIndex="4"/>
                    <Label x:Name="lblUser" Content="Usuario:" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Center" Height="26" Width="160" HorizontalContentAlignment="Right" Foreground="White" FontSize="14" FontWeight="Bold"/>
                    <Label x:Name="lblPass1" Content="Contraseña:" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Center" Height="26" Width="160" HorizontalContentAlignment="Right" Foreground="White" FontSize="14" FontWeight="Bold" Grid.Row="1"/>
                    <Label x:Name="lblNombre" Content="Nombre:" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Center" Height="26" Width="160" HorizontalContentAlignment="Right" Foreground="White" FontSize="14" FontWeight="Bold" Grid.Row="3"/>
                    <Button x:Name="btnCancelar" Content="Cancelar" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" Width="100" Height="30" Grid.Column="1" Grid.Row="4" FontSize="16" FontWeight="Bold"/>
                    <Label x:Name="lblPass2" Content="Confirmar contraseña:" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Center" Height="26" Width="160" HorizontalContentAlignment="Right" Foreground="White" FontSize="14" FontWeight="Bold" Grid.Row="2"/>
                    <PasswordBox x:Name="txtNewPass1" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Width="136" Height="26" VerticalContentAlignment="Center" Background="#FF4D4D4D" Foreground="White" BorderThickness="0" Padding="0" FontSize="14" FontWeight="Bold" HorizontalContentAlignment="Center" Grid.Column="1" Grid.Row="1" TabIndex="2"/>
                    <PasswordBox x:Name="txtNewPass2" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Width="136" Height="26" VerticalContentAlignment="Center" Background="#FF4D4D4D" Foreground="White" BorderThickness="0" Padding="0" FontSize="14" FontWeight="Bold" HorizontalContentAlignment="Center" Grid.Column="1" Grid.Row="2" IsEnabled="False" TabIndex="3"/>
                    <Image x:Name="imgPass1" HorizontalAlignment="Right" Height="30" Margin="0,0,10,0" VerticalAlignment="Center" Width="30" Source="Assets/check.png" Grid.Column="1" Grid.Row="1" Visibility="Hidden"/>
                    <Image x:Name="imgPass2" HorizontalAlignment="Right" Height="30" Margin="0,0,10,0" VerticalAlignment="Center" Width="30" Source="Assets/check.png" Grid.Column="1" Grid.Row="2" Visibility="Hidden"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
